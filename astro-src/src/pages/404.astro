---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found" description="The page you're looking for doesn't exist">
  <div class="container mx-auto py-20 text-center">
    <div class="max-w-2xl mx-auto">
      <h1 class="text-6xl font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-primary-600 to-purple-600">404</h1>
      <h2 class="text-2xl font-bold mb-6">Page Not Found</h2>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <div class="flex justify-center space-x-4">
        <a href="/" class="btn btn-primary">
          <i class="fas fa-home mr-2"></i> Go Home
        </a>
        <a href="/blog" class="btn btn-secondary">
          <i class="fas fa-book-open mr-2"></i> Read Blog
        </a>
      </div>
    </div>
  </div>
</Layout>
